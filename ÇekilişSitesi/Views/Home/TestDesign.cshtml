@{
	ViewData["Title"] = "TestDesign";
	Layout = null;
}


<link rel="stylesheet" href="~/css/GradientBody.css" asp-append-version="true" />
<script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>
<link rel="stylesheet" href="https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" type="text/css" />

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Test Design</title>
	<style>
		body {
			margin: 0;
			padding: 0;
			display: flex;
			height: 100vh;
		}

		.section {
			flex: 1;
			display: flex;
			justify-content: center;
			align-items: center;
			opacity: 0.2;
		}

			.section:nth-child(odd) {
				background: #e0e0e0;
				margin: 15px;
				text-align: center;
			}

			.section:nth-child(even) {
				background: #d0d0d0;
				margin-top: 120px;
				margin-bottom: 120px;
			}
	</style>
</head>
<body>
	<div class="section">
		<form action="/file-upload" class="dropzone" id="participantForm" style="width: 50%;height: 30%; border:none;">
			<!-- Content for the first section goes here -->
			<h2>Participants</h2>

		</form>
	</div>

	<div class="section">
		<!-- Content for the second section goes here -->
		<h2>Section 2</h2>
	</div>

	<div class="section">
		<form action="/file-upload" class="dropzone" id="prizesForm" style="width: 50%;height: 30%; border:none;">
			<!-- Content for the first section goes here -->
			<h2>Prizes</h2>

		</form>
	</div>
</body>
</html>